{% extends "./layouts/guest.html" %}

{% block body %}
<div class="h-screen w-full flex items-center justify-center">
    <div class="w-full max-w-sm p-4 bg-white 
                flex flex-col gap-4
                border border-gray-200 rounded-lg 
                shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex flex-col items-center">
            <div class="bg-gray-200 p-3 rounded-full">
                <i class="fa-solid fa-pen-to-square text-3xl"></i>
            </div>
            <h1 class="text-3xl">Sign Up</h1>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'w-full flex flex-col gap-4'}}) }}
            <div>
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                <div class="flex">
                    <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    {{ form_widget(registrationForm.email, {'attr': {
                        'class': 'rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                    }}) }}
                </div>
                <div class="text-red-500 text-sm">
                    {{ form_errors(registrationForm.email) }}
                </div>
            </div>

            <div>
                {{ form_label(registrationForm.fullName, 'Full Name', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                <div class="flex">
                    <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                        <i class="fa-solid fa-user"></i>
                    </span>
                    {{ form_widget(registrationForm.fullName, {'attr': {
                        'class': 'rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                    }}) }}
                </div>
                {{ form_errors(registrationForm.fullName) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                <div class="flex">
                    <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                        <i class="fa-solid fa-key"></i>
                    </span>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {
                        'class': 'rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
                    }}) }}
                </div>
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div>
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {
                        'class': 'mr-2'
                    }}) }}
                    <span class="text-sm text-gray-900 dark:text-white">I agree to the terms and conditions</span>
                </div>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="flex justify-center mt-1">
                <button 
                    type="submit" 
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Sign Up
                </button>
            </div>
        {{ form_end(registrationForm) }}
        Already have an Account? <a class="text-blue-600" href="{{ path('app_login') }}">Register here.</a>
    </div>
</div>
{% endblock %}
